---
type Props = {
	href: string;
};
const { href } = Astro.props;
---

<a class="link" href={href}>view more</a>

<style lang="scss">
	@import '@styles/main.scss';
	.link {
		position: relative;
		padding-right: 60px;
		transition: color 0.2s;
		font-family: 'Hina Mincho', sans-serif;
		&::after,
		&::before {
			position: absolute;
			content: '';
		}
		&::before {
			top: 15px;
			right: 16px;
			width: 38px;
			height: 1px;
			background-color: var(--gray-light-color);
		}
		&::after {
			transition: all 0.2s ease-in-out;
			transform: scale(1);
			width: 29px;
			height: 29px;
			border-radius: 50%;
			border: solid 1px var(--gray-light-color);
			right: 0;
		}
		&:hover {
			transition: color 0.2s ease-in-out;
			color: var(--gray-light-color);
			&::after {
				animation: 0.4s circleanime forwards;
			}
		}
		@keyframes circleanime {
			0% {
				transform: scale(0);
			}
			100% {
				transform: scale(1);
			}
		}
	}
</style>
